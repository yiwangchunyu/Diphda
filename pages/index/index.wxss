.fb-type{
  height: 100rpx;
  width: 90%;
  background: #fff;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.fb-type .type-label{
  height: 30rpx;
