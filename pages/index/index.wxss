/**index.wxss**/
@import "../../wxSearchView/wxSearchView.wxss";
page{
    background: #f4f4f4;
    min-height: 100%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.scroll_containner{
  position: relative;
  background: #efeff4; 
  white-space: nowrap; 
  display: flex;
  height: 100px; 
}

.scroll_item_box{
  position: relative;
  background: #ffffff; 
  width: 130px; 
  height: 80px; 
  margin: 10px;
  display: inline-block;
  vertical-align:top; 
  border: 1rpx solid #e6e6ea;
  border-radius: 5px;
}

.scroll_item_box_textview{
  position: relative;
  margin: 5px;
  width: 95px;
  height: 55px;
  padding: 5px;
  line-height: 20rpx;
  /* display: inline-block; */
  /* border: 1rpx solid #e6e6ea; */
}

.scroll_item_box_textview_1{
  position: relative;
  display: block;
  width: 90px;
  height: 20px;
  /* border: 1rpx solid #e6e6ea; */
  font-size:30rpx; 
}

.scroll_item_box_textview_2{
  position: relative;
  width: 90px;
  /* border: 1rpx solid #e6e6ea; */
  font-size:20rpx; 
  
}

.scroll_item_box_iconview{
  position: absolute;
  overflow: auto; 
  margin: auto; 
  top: 0; bottom: 0; right: 0px; 
  width: 15px;
  height: 15px;
  /* border: 1rpx solid #e6e6ea; */
}

.title-line{
  width: 100%;
  padding: 20rpx;
  background: white;
  font-size:25rpx; 
  border: 1rpx solid #e6e6ea;
}

.card-container{
  padding: 5rpx;
}
.card{
  background: white;
  position: relative;
  padding: 20rpx;
  border: 1rpx solid #e6e6ea;
  border-radius: 10rpx;
}

.card-category{
  display: block;
  font-size:35rpx; 
}

.card-content{
  display: block;
  font-size:27rpx; 
  color: #777777;
  width: 500rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  line-height: 50rpx;
}

.card-price{
  font-size:25rpx; 
}

.card-price_num{
  padding: 10rpx;
  font-size:25rpx; 
}

.card-price_cny{
  font-size:25rpx; 
}

.card-label{
  position: absolute;
  display: flex;
  right: 10rpx; 
  top: 10rpx;
  font-size:20rpx; 
  /* border: 1rpx solid #0606f8; */
}
.card-label-item{
  /* float: right; */
  padding: 10rpx;
  margin: 7rpx;
  color: #777777;
  border: 1rpx solid #e6e6ea;
  border-radius: 4px;
}


.card-status-label{
  position: absolute;
  bottom: 80rpx;right: 50rpx;
  padding: 10rpx;
  border: 1rpx solid #e6e6ea;
  border-radius: 4px;
  /* background: rgb(85, 185, 76); */
  font-size:18rpx;
}

.status0{
  background: rgb(255, 93, 88);
}

.status1{
  background: rgb(85, 185, 76);
}

.status2{
  background: rgb(248, 175, 80);
}

.status3{
  background: rgb(0, 144, 201);
}

.status4{
  background: rgb(201, 32, 252);
}

.card-status-toright{
  position: absolute;
  bottom: 80rpx; right: 0px; 
  width: 25px;
  height: 25px;
}

.card-members{
  position: absolute;
  width: 70%;
  height: 50rpx;
  right: 20rpx; 
  bottom: 10rpx;
  font-size:18rpx; 
  /* border: 1rpx solid #0606f8; */
}

.card-members-text{
  margin-top:10rpx; 
  float: right;
  font-size:18rpx;
  /* border: 1rpx solid #0606f8; */
}

.card-members-avatars{
  float: right;
}

.card-members-avatars-item{
  height: 50rpx;
  width: 50rpx;
  float: right;
}

.card-members-count{
  margin-top:10rpx; 
  font-size:20rpx;
  float: right;
}

/**顶部导航栏**/  
